<!-- Button trigger modal -->
<div class="top">
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#create">
  Add new item
</button>

<!-- Modal -->
<div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="modal-body">
          <form class="create-list-item">
            <input type="text" name="listItem[title]" placeholder="title"/>
            <textarea type="text" name="listItem[description]" placeholder="description">{{listItem.description}}</textarea>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" data-id="{{listItem._id}}" class="btn btn-info create-list-item">Create</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="list-title"> Your List</div>
</div>

<div class="container">
{{#each listItems as |listItem|}}
  {{log listItem}}
  <section data-id="{{listItem._id}}" class="item">
    <h5>{{listItem.title}}</p>
    <p>{{listItem.description}}</p>



    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#list-item-{{listItem._id}}">
      Update
    </button>

    <!-- Modal -->
    <div class="modal fade" id="list-item-{{listItem._id}}" tabindex="-1" role="dialog" aria-labelledby="editListItem" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editListItem">Edit list item</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form data-id="{{listItem._id}}" class="update-list-item">
              <textarea class="form-control" rows="1" type="text" name="listItem[title]" placeholder="Title">{{listItem.title}}</textarea>
              <textarea class="form-control" type="text" name="listItem[description]" placeholder="Description">{{listItem.description}}</textarea>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary discard-changes" data-dismiss="modal">Discard Changes</button>
                <button type="submit" class="btn btn-info update-list-item">Save Changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

  <button id="delete-list-item" type="click" class="btn btn-danger delete-list-item">Remove</button>

</section>
{{/each}}
</div>
